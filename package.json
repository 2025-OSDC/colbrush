{
    "name": "colbrush",
    "version": "1.17.0",
    "description": "A React theme switching library that makes it easy to apply color-blind accessible UI themes",
    "homepage": "https://colbrush.site",
    "repository": {
        "type": "git",
        "url": "https://github.com/2025-OSDC/colbrush.git"
    },
    "type": "module",
    "main": "./dist/client.cjs",
    "module": "./dist/client.js",
    "types": "./dist/client.d.ts",
    "exports": {
        "./styles.css": "./dist/styles.css",
        "./client": {
            "types": "./dist/client.d.ts",
            "import": "./dist/client.js",
            "require": "./dist/client.cjs"
        },
        "./devtools": {
            "types": "./dist/devtools.d.ts",
            "import": "./dist/devtools.js",
            "require": "./dist/devtools.cjs"
        },
        "./package.json": "./package.json"
    },
    "typesVersions": {
        "*": {
            "devtools": [
                "./dist/devtools.d.ts"
            ],
            "client": [
                "./dist/client.d.ts"
            ],
            "*": [
                "./dist/client.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": [
        "dist/styles.css"
    ],
    "bin": {
        "colbrush": "./dist/cli.cjs"
    },
    "scripts": {
        "svgr": "svgr src/assets --out-dir src/icons --config-file svgr.config.cjs",
        "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
        "build:icons": "svgr src/assets --out-dir src/icons",
        "build": "pnpm svgr && tsup --config tsup.config.ts && pnpm build:css",
        "dev": "tsup --config tsup.config.ts --watch",
        "prepublishOnly": "pnpm build",
        "lint": "eslint .",
        "test:e2e:site": "node ./scripts/run-site-e2e.mjs",
        "test:e2e:cli:smoke": "node ./scripts/run-cli-smoke.mjs",
        "test:e2e:cli": "pnpm --dir e2e/cli test",
        "test": "pnpm --silent test:e2e:cli && pnpm --silent test:e2e:cli:smoke && pnpm --silent test:e2e:site"
    },
    "keywords": [],
    "author": "TEAM ColorBrush",
    "license": "MIT",
    "dependencies": {
        "chokidar": "^3.6.0",
        "chroma-js": "^3.1.2",
        "colorjs.io": "^0.5.2",
        "postcss": "^8.5.6",
        "postcss-safe-parser": "^7.0.1"
    },
    "peerDependencies": {
        "react": ">=17",
        "react-dom": ">=17"
    },
    "devDependencies": {
        "@svgr/cli": "^8.1.0",
        "@tailwindcss/cli": "^4.1.12",
        "@types/chroma-js": "^3.1.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.1.0",
        "@types/postcss-safe-parser": "^5.0.4",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "esbuild-plugin-svgr": "^3.1.1",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^30.0.5",
        "prettier": "^3.6.2",
        "tailwindcss": "^4.1.12",
        "ts-jest": "^29.4.0",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    }
}
